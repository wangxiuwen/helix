{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "helix",
  "version": "0.3.0",
  "identifier": "com.helix.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": false,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Helix",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 700,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: data: https:; style-src 'self' 'unsafe-inline'; font-src 'self' https:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src ipc: http://ipc.localhost https: http: ws: wss:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist"
    }
  },
  "plugins": {
    "process": null,
    "fs": null,
    "dialog": null,
    "opener": null,
    "updater": {
      "endpoints": [
        "https://devhelix.example.com/updates/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": ""
    }
  }
}